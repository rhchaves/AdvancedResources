@model IEnumerable<AdvancedResources.Models.Department>

@{
    ViewData["Title"] = "Adicionar Novo Departamento";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Novo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-success btn-sm">Editar</button></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-primary btn-sm">Detalhes?</button></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-danger btn-sm">Deletar</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
